{% extends '::adminbase.html.twig' %}

{% block content %}
<nav class="sub">
  <ul>
    <li>
      <a href="{{ path('admin_postalcode') }}">
        {{ 'admin.back.button'|trans({}, 'admin') }}
      </a>
    </li>
  </ul>
</nav>
<h1>{{ 'admin.zip_to_city.edit.header.text'|trans({}, 'admin') }}</h1>

{% for message in app.session.flashbag.get('notice') %}
<div class="message notice">
  {{ message|trans({}, 'admin') }}
</div>
{% endfor %}

<p>{{ 'admin.zip_to_city.edit.description.text'|trans({}, 'admin') }}</p>

<form action="{{ path('admin_postalcode_edit', {'id' : zip_to_city.id}) }}" method="post" {{ form_enctype(form) }} id="zip_to_city-edit-form" class="edit-form">
  <div id="zip_to_city-edit">
    {{ form_rest(form) }}
    {{ form_row(form._token) }}
  </div>
  <input class="button right" type="submit" value="{{ 'update.zip_to_city'|trans({}, 'admin') }}">
  <a class="button left" href="{{ path('admin_postalcode') }}">{{ 'cancel'|trans({}, 'admin') }}</a>
</form>

{% endblock %}
