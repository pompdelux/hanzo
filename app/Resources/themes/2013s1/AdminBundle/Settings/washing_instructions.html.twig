{% extends '::adminbase.html.twig' %}

{% block content %}
<nav class="sub">
  <ul>
    <li id="select-language">
      <a class="open-menu" href="#">
        {% if locale %}
          <span class="flag {{ locale }}"></span> |
        {% endif %}
        {{ 'washing.language.selector'|trans({}, 'admin') }}
      </a>
      <div style="display:none;">
        <ul>
        {% for language in languages_availible %}
          <li>
            <a href="{{ path('admin_settings_washing_instructions_locale', {'locale' : language.locale}) }}">
              <span class="flag {{ language.locale }}"></span>{{ language.name }}
            </a>
          </li>
        {% endfor %}
        </ul>
      </div>
    </li>
    <li id="select-code" class="dropdown-menu">
      <a class="open-menu" href="#">
        {{ 'admin.washingcode.selector'|trans({}, 'admin') }}
      </a>
      <div style="display:none;">
        <ul>
        {% for code in codes_availible %}
          <li>
            <a href="{{ path('admin_settings_washing_instructions', {'code' : code.code}) }}">
              (#{{ code.code }})
            </a>
          </li>
        {% endfor %}
        </ul>
      </div>
    </li>
    <li>
      <a href="{{ path('admin_settings_washing_instructions') }}">
        {{ 'admin.washingcode.list.link'|trans({}, 'admin') }}
      </a>
    </li>
    <li>
      <a href="{{ path('admin_settings_washing_instructions_edit') }}">
        {{ 'admin.washingcode.add_new.link'|trans({}, 'admin') }}
      </a>
    </li>
  </ul>
</nav>

<h1>{{ 'admin.washing.header.text'|trans({}, 'admin') }}</h1>

{% for message in app.session.flashbag.get('notice') %}
<div class="message notice">
  {{ message|trans({}, 'admin') }}
</div>
{% endfor %}

{% if washing_instructions|length > 0 %}

<p>{{ 'admin.washing.description.text'|trans({}, 'admin') }}</p>

<table id="washing" class="list">
  <thead>
    <tr>
      <th>{{ 'admin.washing.code'|trans({}, 'admin') }}</th>
      <th>{{ 'admin.washing.locale'|trans({}, 'admin') }}</th>
      <th>{{ 'admin.washing.description'|trans({}, 'admin') }}</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for washing_instruction in washing_instructions %}
    <tr>
      <td>{{ washing_instruction.code }}</td>
      <td>{{ washing_instruction.locale }}</td>
      <td>{{ washing_instruction.description }}</td>
      <th>
        <a href="{{ path('admin_settings_washing_instructions_edit', {'id' : washing_instruction.id}) }}">
          {{ 'admin.washing.edit'|trans({}, 'admin') }}
        </a>
      </th>
      <th>
        <a href="{{ path('admin_settings_washing_instructions_delete', {'id' : washing_instruction.id, 'locale' : washing_instruction.locale }) }}" class="delete">
          {{ 'admin.washing.delete'|trans({}, 'admin') }}
        </a>
      </th>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% else %}

<p>{{ 'admin.washing.no.washing.text'|trans({}, 'admin') }}</p>

{% endif %}
{% endblock %}
