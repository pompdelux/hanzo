{% extends '::adminbase.html.twig' %}

{% block content %}
<nav class="sub">
  <ul>
    <li>
      <a href="{{ path('admin_settings_messages') }}">
        {{ 'admin.back.button'|trans({}, 'admin') }}
      </a>
    </li>
    <li>
      <a href="{{ path('admin_settings_messages_edit_ns') }}">
        {{ 'admin.messages.add_new.link'|trans({}, 'admin') }}
      </a>
    </li>
  </ul>
</nav>
<h1>{{ 'admin.messages.edit.header.text'|trans({}, 'admin') }}</h1>

{% for message in app.session.flashbag.get('notice') %}
<div class="message notice">
  {{ message|trans({}, 'admin') }}
</div>
{% endfor %}

<p>{{ 'admin.messages.edit.description.text'|trans({}, 'admin') }}</p>

<form action="{{ path('admin_settings_messages_edit', {'id' : message.id, 'locale' : message.locale}) }}" method="post" {{ form_enctype(form) }} id="messages-edit-form" class="edit-form">
  <div id="messages-edit">
    {{ form_rest(form) }}
    {{ form_row(form._token) }}
  </div>
  <input class="button right" type="submit" value="{{ 'update.messages'|trans({}, 'admin') }}">
  <a class="button left" href="{{ path('admin_settings_messages') }}">{{ 'cancel'|trans({}, 'admin') }}</a>
</form>

{% endblock %}
