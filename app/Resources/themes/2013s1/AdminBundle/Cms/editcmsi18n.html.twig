{% extends '::adminbase.html.twig' %}

{% block content %}

    <nav class="navbar navbar-default" role="navigation">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="flag {{ node.locale }}"></span>{{ 'languages.selector'|trans({}, 'admin') }}
                        <b class="caret"></b>
                    </a>

                    <ul class="dropdown-menu">
                        {% for language in languages %}
                            <li><a href="{{ path('admin_cms_edit', {'id' : node.id, 'locale' : language.locale}) }}"><span class="flag {{ language.locale }}"></span>{{ language.name }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                <li><a href="{{ path('admin_cms') }}">{{ 'admin.back.button'|trans({}, 'admin') }}</a></li>
            </ul>
        </div>
    </nav>

    <h1>{{ 'update.cms.header.text'|trans({}, 'admin') }}</h1>

{% for message in app.session.flashbag.get('notice') %}
    <div class="alert alert-info">
        {{ message|trans({}, 'admin') }}
    </div>
{% endfor %}

    {% form_theme form 'AdminBundle:Form:fields.html.twig' %}
    <form action="{{ path('admin_cms_edit', {'id' : node.id, 'locale' : node.locale}) }}" method="post" {{ form_enctype(form) }} id="cms-edit-form" class="form-horizontal" role="form">
        {{ form_errors(form) }}

    {% if node.getUpdatedBy %}
        <div class="cms-meta">
            Last update by {{ node.getUpdatedBy }} {{ node.getUpdatedAt|date('d/m/Y H:i') }}
        </div>
    {% endif %}

        {{ form_row(form.locale) }}
        {{ form_row(form.is_active) }}
        {{ form_row(form.is_restricted) }}
        {{ form_row(form.on_mobile) }}
        {{ form_row(form.type) }}
        {{ form_row(form.title) }}
        {{ form_row(form.path) }}
        {{ form_row(form.content) }}
        {{ form_row(form.settings) }}
        {{ form_row(form._token) }}

        <div class="form-group">
            <input class="button btn btn-success" type="submit" value="{{ 'update.cms'|trans({}, 'admin') }}">
            <a class="button btn btn-default" href="{{ path('admin_cms') }}">{{ 'cancel'|trans({}, 'admin') }}</a>
        </div>
    </form>

{% endblock %}

{% block javascript %}

<script type="text/javascript">
  var path = "{{ path }}";
    $(document).ready(function(){
      /* Pretty print the settings in the textarea */
      var settings = $('#form_settings').val();
      if(settings !== "undefined" && settings){
        $('#form_settings').val(JSON.stringify(JSON.parse(settings),null,'\t'));
      }
    });
</script>

{% endblock %}
